<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>List of Remote Assistance Requests</title>
<link href="jquery/jquery-ui.css" rel="stylesheet">
<style>
body {
	font: 75% "Trebuchet MS", sans-serif;
	margin: 0;
}
th {
	background-color: #eceff2;
}
table {
	font: 100% "Trebuchet MS", sans-serif;
}
table, th, td {
	border: 1px solid #cdcdcd;
	border-spacing:0px 0px;
} 
th, td {
	padding: 3px;
}
.tr_even {
	background-color: #eceff2;
}
.start_icon {
	vertical-align:text-bottom;
	border:none;
    outline:none
}
a {
	text-decoration: none;
}
</style>
</head>
<body>

<p><b>List of Remote Assistance Requests</b></p>

<table border=1>
<thead><tr><th>Request Time</th><th>User</th><th>Machine Name</th><th>OS Version</th><th>Action</th></tr></thead>
<tbody>
${TABLE_ROWS}
</tbody>
<tfoot></tfoot>
</table>
<br><br>
<ul>
	<li><i>Normally remote assistance request is timeout in 6 minutes.</i></li>
	<li><i>Remote assistance request history will be kept for one day and deleted automatically.</i></li>
</ul>

<br>
<i>Horizon Remote Assistance, V 0.1</i>

<script src="jquery/external/jquery/jquery.js"></script>
<script src="jquery/jquery-ui.js"></script>
<script>
$( "#button" ).button();

function launchRA(id) {
	$.ajax("hra?id=" + id, {
		error: function(jqXHR, textStatus, errorThrown) {
			var text = textStatus;
			if (errorThrown)
				text += " " + errorThrown;
			alert(text);
		},
	}).done(function( data ) {
		if (data != "OK") {
			alert("Error: " + data);
		}
	});
	document.getElementById('td_' + id).innerHTML = "Started";
}

function test(value) {
	$.ajax("hra?test=" + value, {
		error: function(jqXHR, textStatus, errorThrown) {
			var text = textStatus;
			if (errorThrown)
				text += " " + errorThrown;
			alert(text);
		},
	}).done(function( data ) {
		if (data != "OK") {
			alert("Error: " + data);
		}
	});
}

setTimeout(function(){
   self.location.reload();
}, 60000);
</script>

</body>
</html>